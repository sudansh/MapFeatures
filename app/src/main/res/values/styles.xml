<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/background</item>

		<item name="toolbarStyle">@style/AppToolbarStyle</item>
		<item name="android:windowContentTransitions">true</item>
		<item name="textInputStyle">@style/AppTextInputStyle</item>
		<!-- enable overlapping of exiting and entering activities-->
		<item name="android:windowAllowEnterTransitionOverlap">true</item>
		<item name="android:windowAllowReturnTransitionOverlap">true</item>

	</style>

	<style name="AppTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="boxBackgroundColor">@color/white</item>
		<item name="boxStrokeColor">@color/white</item>
		<item name="boxBackgroundMode">filled</item>
	</style>

	<style name="AppToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
		<item name="titleTextColor">@color/white</item>
		<item name="android:background">@color/colorAccent</item>
		<item name="background">@color/colorAccent</item>
		<item name="android:gravity">center_vertical</item>
	</style>
</resources>